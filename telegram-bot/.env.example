BOT_TOKEN=your_bot_token_here
# Optional: separate support bot token (creates separate Support inbox in CRM)
SUPPORT_BOT_TOKEN=your_support_bot_token_here
ADMIN_IDS=503856039,123456789
# Postgres connection string (required; schema provider is postgresql)
DATABASE_URL="postgresql://user:password@host:5432/dbname"
WEBAPP_URL=https://your-webapp-url.vercel.app
API_PORT=3001

# Production Environment
NODE_ENV=production

# Webhook Configuration (Required for production)
WEBHOOK_URL=https://your-domain.com
WEBHOOK_SECRET_TOKEN=your_webhook_secret_token_here

# Support webhook secret token (required if SUPPORT_BOT_TOKEN is set)
SUPPORT_WEBHOOK_SECRET_TOKEN=your_support_webhook_secret_token_here

# JWT Secrets (Required for production)
USER_JWT_SECRET=your_user_jwt_secret_here

# Trading Cards Settings
CARDS_MIN_PER_DAY=4
CARDS_MAX_PER_DAY=16
CARDS_START_TIME=07:49
CARDS_END_TIME=22:30

# CRM Admin Portal (required for CRM access)
CRM_ADMIN_USERNAME=admin
CRM_ADMIN_PASSWORD=your-secure-password-here
CRM_JWT_SECRET=your-random-jwt-secret-key-here

# OxaPay API Keys
OXAPAY_API_KEY=your_oxapay_api_key_here
OXAPAY_PAYOUT_API_KEY=your_oxapay_payout_key_here

# PayPal (optional)
# Use sandbox while testing, then switch to live.
PAYPAL_ENV=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
# Where to return user after approving/canceling (Telegram Mini App URL)
PAYPAL_RETURN_URL=https://your-telegram-miniapp-url
PAYPAL_CANCEL_URL=https://your-telegram-miniapp-url
# Webhook ID from PayPal Developer Dashboard (required for webhook signature verification)
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here

# Security Note:
# Generate secrets with: openssl rand -hex 32
# NEVER commit your actual .env file to git!

